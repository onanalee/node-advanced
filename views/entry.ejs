<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.5.1.js"
        integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.4.0/socket.io.js"></script>

    <title>Document</title>

    <script>
        function getSelf(callback) {
            $.ajax({
                type: 'GET',
                url: '/api/users/me',
                headers: {
                    authorization: `Bearer ${localStorage.getItem('token')}`,
                },
                success: function (response) {
                    callback(response.user);
                },
                error: function (xhr, status, error) {
                    if (status === 401) {
                        alert('로그인이 필요합니다.');
                    } else {
                        localStorage.clear();
                        alert('알 수 없는 문제가 발생했습니다. 관리자에게 문의하세요.');
                    }
                    window.location.href = '/login';
                },
            });
        }

        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);
        const postId = urlParams.get("postId");

        function displayPost() {
            $.ajax({
                type: 'GET',
                url: `/api/post/${postId}`,
                data: {},
                success: function (response) {
                    console.log('get api successful');

                    let userId = response['post']['userId'];
                    let nickname = response['nicknames'][userId - 1]['nickname'];
                    let title = response['post']['title'];
                    let content = response['post']['content'];
                    let updatedAt = response['post']['updatedAt'];


                    $('#nickname').append('작성자: ', nickname);
                    $('#title').append('제목: ', title);
                    $('#updatedAt').append('수정 날짜: ', updatedAt);
                    $('#content').append('내용: ', content);
                }
            })
        };
        displayPost();

        function writeComment() {
            // only loged in users can write comment
            // let user;
            // getSelf(function (u) {
            //     user = u;
            // });
            // console.log(user);


            let comment = $('#comment').val();
            $.ajax({
                type: 'POST',
                headers: {
                    authorization: `Bearer ${localStorage.getItem('token')}`,
                },
                url: `/api/comment`,
                data: {
                    comment: comment,
                    postId: postId,
                },
                success: function (response) {
                    console.log('write comment successful');
                }
            })
        }


        function signOut() {
            localStorage.clear();
            window.location.href = '/login';
        }
    </script>
</head>

<body>
    <div>
        특정 글 조회 페이지
    </div>
    <div>
        <button onclick="signOut()">로그아웃</button>
    </div>
    <div>
        <div id='title'></div>
        <div id='nickname'></div>
        <div id='updatedAt'></div>
        <div id='content'></div>
    </div>

    <div id="writeComments">
        댓글 작성 <textarea id="comment"></textarea>
    </div>
    <div>
        <button onclick="writeComment()">작성 완료</button>
    </div>

    <button>댓글 수정</button>
    <button>댓글 삭제</button>

    <div id="comments">
        댓글 목록
    </div>
</body>

</html>